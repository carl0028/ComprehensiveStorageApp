@model ComprehensiveStorageApp.Models.CustomerViewModel

<h2>Delete Customer</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>
        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
        @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
        {
            <dt class="col-sm-2">Profile Picture</dt>
            <dd class="col-sm-10">
                <img src="@Model.ProfilePictureUrl" alt="@Model.Name" class="img-thumbnail" style="max-width: 200px;" />
            </dd>
        }
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PartitionKey" />
        <input type="hidden" asp-for="RowKey" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>